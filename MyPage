<!doctype html>
<html ng-app="app">
  <header>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.1/angular.js"></script>
    <script language="javascript" type="text/javascript">
      angular.module('app', []);
      
      //Whatever you put on the controller scope,
      //will be availalble in the HTML element bound to the controller.
      function MyController($scope){
        $scope.newMessage = "Hi";
        $scope.fish = "Orange roughly";
        $scope.sweet = "smarties";
        $scope.messages = ["What's up?", "Yo!"]; 
        
        $scope.add = function(){
          $scope.messages.push($scope.fish);
          $scope.messages.push($scope.sweet);
        };
      }
    </script>
  </header>
  
  <body ng-controller="MyController">
  <b>This is my page :D</b> <br>
    {{fish}} <br>
    <input type= "text" ng-model="fish">
    <input type= "text" ng-model="sweet"
    Leave a message:<br>     
    <input type="text" ng-model="newMessage">
    <input type="submit" ng-click="add()" value="Submit">
    <br>
    Messages: <br>
    <ul>
      <li ng-repeat="message in messages">
        {{message}}
      </li>
    </ul>
  </body>
  
</html>
